    <header>
        <div class="bs-component">
            <nav class="akNavBar navbar navbar-expand-lg navbar-dark bg-primary fixed-top ">
                <div class="container-fluid">

                    <!---------------- Brand----------------->
                    <div class="brand col-1 justify-content-between text-center mx-md-5">
                        <!-- <a class="navbar-brand" href="#">Navbar</a> -->
                        <a class="navbar-brand" href="/">
                            <svg class="bi me-2" width="40" height="32">
                                <use xlink:href="#bootstrap"></use>
                            </svg>
                            <span class="fs-4">MANU_AUTO</span>
                        </a>
                    </div>

                    <!----------------Toggle Btn------------------------->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!------------------Nav collapse-------------------------->
                    <div class="aknav collapse navbar-collapse justify-content-end col-9" id="navbarColor01">
                        <ul class="aknav nav col-lg-auto my-2 justify-content-end my-md-0 mx-md-5 text-small">
                            <li>
                                <a href="/" class="nav-link">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#home"></use>
                                    </svg>
                                    <!-- <img src="./assets/icons/bank.svg" width="24" height="24 alt=""> -->
                                    Accueil
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#info"></use>
                                    </svg>
                                    Qui Sommes Nous
                                </a>
                            </li>

                            <li>
                                <a href="#" class="nav-link">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#contact"></use>
                                    </svg>
                                    Contact
                                </a>
                            </li>
                            <li>

                                <a class="nav-link" asp-area="" asp-controller="Tutoriels" asp-action="Index">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#tuto"></use>
                                    </svg>
                                    Liste des Tutoriels
                                </a>
                            </li>

                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="dropdown">

                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"
                                   role="button" aria-haspopup="true" aria-expanded="false">

                                        <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                            <use xlink:href="#people-circle"></use>
                                        </svg>
                                        @if (SignInManager.IsSignedIn(User))
                                        {

                                            <span> @UserManager.GetUserName(User)!</span>
                                        }
                                        else
                                        {
                                            <span> Utilisateur </span>
                                        }
                                    </a>

                                    <div class="dropdown-menu" style="">
                                        @*   <partial name="_LoginPartial" />*@

                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Mon Compte</a>

                                            <a class="nav-link" asp-area="" asp-controller="Role" asp-action="GetMyRoles">Liste de mes Roles</a>
                                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                            {
                                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Utilisateurs</a>
                                                <a class="nav-link" asp-area="" asp-controller="Role" asp-action="Index">Gestion des Roles</a>
                                            }
                                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Deconnexion</button>
                                            </form>

                                        }
                                        else
                                        {
                                            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Enregistez-Vous</a>

                                            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Connexion</a>

                                            <div class="dropdown-divider"></div>
                                        }

                                    </div>
                                </li>
                            }
                            else
                            {

                       @*         <a class="nav-link" asp-area="" asp-controller="Tutoriels" asp-action="Index">
                                    
                                    Liste des Tutoriels
                                </a>*@
                                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#tuto"></use>
                                    </svg>
                                    Enregistez-Vous</a>

                                <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">
                                    <svg class="bi d-block mx-auto mb-1" width="24" height="24">
                                        <use xlink:href="#tuto"></use>
                                    </svg>
                                    Connexion</a>

                               @* <div class="dropdown-divider"></div>*@
                            }

                            @* <partial name="_LoginPartial" />*@

                        </ul>
                    </div>

                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MANU_AUTO - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
