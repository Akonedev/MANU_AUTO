@model MANU_AUTO.Models.Categorie

@{
    ViewData["Title"] = "Modification";
}

<h2>Modification de la catégorie @Model.Label</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Label" class="control-label mb-3"></label>
                <input asp-for="Label" class="form-control  mb-3" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary  mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Liste des catégories</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
