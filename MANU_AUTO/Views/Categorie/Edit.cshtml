@model MANU_AUTO.Models.Categorie

@{
    ViewData["Title"] = "Modification catégorie";
}

<h3 class="titleEditCat">Modification de la catégorie<span> @Model.Label</span> </h3>


<div class="editCatetegorie">
    <form asp-action="Edit">
        <div class="row">
            <div class="col-sm-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group" id="editLabel">
                    <label asp-for="Label" class="control-label mb-3"></label>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="row" id="line2">
            <div class="col-sm-8" id="editinputLabel">
                <div class="form-group">
                    <input asp-for="Label" class="form-control  mb-3" />
                    <span asp-validation-for="Label" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4 position-relative" id="editBtn">
                <input type="submit" value="Modifier" class="btn btn-primary" />                
            </div>
        </div>
    </form>
</div>

<div class="editLink">
    <a asp-action="Index">Liste des catégories</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
